{
	"name": "thaibgdb",
	"version": "0.9.0",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"start": "node build/index.js",
		"type-check": "tsc --project tsconfig.json --pretty --noEmit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"format-check": "prettier -- --list-different",
		"validate": "npm-run-all --parallel type-check lint build",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@supabase/supabase-js": "^1.30.0",
		"@sveltejs/adapter-node": "^1.0.0-next.68",
		"@sveltejs/kit": "^1.0.0-next.85",
		"@tailwindcss/forms": "^0.4.0",
		"@tailwindcss/line-clamp": "^0.3.1",
		"@types/cookie": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"autoprefixer": "^10.4.2",
		"cookie": "^0.4.1",
		"cssnano": "^5.0.17",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.1.0",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.6",
		"postcss-load-config": "^3.0.1",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"rollup-plugin-svelte-svg": "^1.0.0-beta.6",
		"svelte": "^3.29.0",
		"svelte-feather-icons": "^3.3.0",
		"svelte-preprocess": "^4.6.9",
		"svelte-seo": "^1.1.0",
		"tailwindcss": "^3.0.18",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0",
		"vite": "^2.1.0"
	},
	"type": "module",
	"engines": {
		"node": "16.x",
		"npm": "8.x"
	},
	"husky": {
		"hooks": {
			"pre-commit": "CI=1 npm-run-all --parallel type-check && lint-staged"
		}
	},
	"lint-staged": {
		"*.+(js|ts|svelte)": [
			"yarn run lint"
		],
		"*.+(js|json|ts|svelte)": [
			"yarn run format"
		]
	},
	"dependencies": {
		"@rodneylab/svelte-social-icons": "^0.0.21",
		"daisyui": "^1.25.4",
		"discord.js": "^13.8.0",
		"svelte-i18n": "^3.3.13",
		"svelte-share-buttons-component": "^1.5.0",
		"svelty-picker": "^1.2.4",
		"svg-to-svelte": "^2.2.1",
		"theme-change": "^2.0.2"
	}
}
